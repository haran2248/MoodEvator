<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFE5D5"
    android:id="@+id/dl"
    tools:context=".HomePage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#F3D09B"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to moodEvator"

        android:textColor="#EDCB5757"
        android:fontFamily="@font/raleway_semibold"
        android:layout_marginLeft="60dp"
        android:textSize="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivational movies to improve your mood"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#EDCB5757"
        android:fontFamily="@font/raleway_semibold"
        android:textSize="18dp"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#F3D09B"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/pursuit"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/pursuit"
            android:transitionName="imageTrans"
            android:layout_marginLeft="0dp"
            android:rotation="0"/>
        <ImageView
            android:id="@+id/shawshank"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/shawshank"
            android:transitionName="imageTrans"
            android:layout_marginLeft="20dp"
            android:rotation="0"/>
        <ImageView
            android:id="@+id/blind_side"
            android:layout_width="150dp"
            android:layout_height="150dp"

            android:layout_marginTop="0dp"
            android:src="@drawable/blind_side"
            android:transitionName="imageTrans"
            android:layout_marginLeft="20dp"
            android:rotation="0"/>
        <ImageView
            android:id="@+id/forrest_gump"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/forrest_gump"
            android:transitionName="imageTrans"
            android:layout_marginLeft="20dp"
            android:rotation="0"/>
        <ImageView
            android:id="@+id/four_min"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/four_min"
            android:transitionName="imageTrans"
            android:layout_marginLeft="20dp"
            android:rotation="0"/>
        
    </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivational songs to improve your mood"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/raleway_semibold"
        android:textColor="#EDCB5757"
        android:textSize="20dp"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#F3D09B"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/linkin"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/linkin_park"
                android:transitionName="imageTrans"
                android:layout_marginLeft="0dp"
                android:rotation="0"/>
            <ImageView
                android:id="@+id/one_republic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/one_republic"
                android:transitionName="imageTrans"
                android:layout_marginLeft="20dp"
                android:rotation="0"/>
            <ImageView
                android:id="@+id/green_day"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/greenday"
                android:transitionName="imageTrans"
                android:layout_marginLeft="20dp"
                android:rotation="0"/>
            <ImageView
                android:id="@+id/one_d"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/one_direction"
                android:transitionName="imageTrans"
                android:layout_marginLeft="20dp"
                android:rotation="0"/>
            <ImageView
                android:id="@+id/ed"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/ed_sheeran"
                android:transitionName="imageTrans"
                android:layout_marginLeft="20dp"
                android:rotation="0"/>

        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Motivational books to improve your mood"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/raleway_semibold"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textColor="#EDCB5757"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:backgroundTint="#F3D09B"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/power_of_sub"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_marginTop="0dp"
                android:src="@drawable/power_of_sub"
                android:transitionName="imageTrans"
                android:layout_marginLeft="0dp"
                android:paddingBottom="30dp"
                android:rotation="0"/>
            <ImageView
                android:id="@+id/think_and_grow"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_marginTop="0dp"
                android:src="@drawable/think_rich"
                android:transitionName="imageTrans"
                android:layout_marginLeft="20dp"
                android:paddingBottom="30dp"
                android:rotation="0"/>
            <ImageView
                android:id="@+id/wings_of_fire"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/wings_of_fire"
                android:transitionName="imageTrans"
                android:paddingBottom="30dp"
                android:layout_marginLeft="20dp"
                android:rotation="0"/>
            <ImageView
                android:id="@+id/attitude"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_marginTop="0dp"
                android:src="@drawable/attitude"
                android:transitionName="imageTrans"
                android:paddingBottom="30dp"
                android:layout_marginLeft="20dp"
                android:rotation="0"/>
            <ImageView
                android:id="@+id/you_can_win"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_marginTop="0dp"
                android:paddingBottom="30dp"
                android:src="@drawable/you_can_win"
                android:transitionName="imageTrans"
                android:layout_marginLeft="20dp"
                android:rotation="0"/>

        </LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>
    </ScrollView>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="225dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>